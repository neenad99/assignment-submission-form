<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submission Form</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <%- include('./styles'); %>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
</head>
<body>
    <div class="container" id="container">
        <h1>Assignment Submission</h1>
        <form id='form' action="/upload" method="POST" enctype="multipart/form-data">
            <div class="input-group">
                <label for='rolno'>Your RollNo</label>
                <input name='rollno' id='RollNo' placeholder="Enter your RollNo" />
            </div>
            <div class="input-group">
                <label for='name'>Your name</label>
                <input name='name' id='name' placeholder="Enter your name" />
            </div>
            <div class="input-group">
                <label for='files'>Select files</label>
                <input id='file' type="file" name="file">
            </div>
            <button class="submit-btn1 btn-primary" type='submit'>Upload</button>
            <button class="submit-btn2 btn-success mt-3" type="button" id="viewBtn">View Uploads</button>
        </form>
        <div id="list"></div>
    </div>
   
    <script>
        const container = document.querySelector('#list');
        const viewBtn = document.querySelector('#viewBtn');

        viewBtn.addEventListener('click',(e)=>{
        const host = ''; //add your deployed url

        while(container.firstChild)container.removeChild(container.firstChild);

        const h2 = document.createElement('h2');
        h2.innerText = 'Your Uploads';
        const hr = document.createElement('hr');
        container.appendChild(h2);
        container.appendChild(hr);

        let request = new Request(`${host}/files`,{
            method:'GET',
            headers:{
                'Content-Type':'application/json'
            }
        });

        fetch(request).then((resp)=>resp.json().then((res)=>{
            console.log(res);

            let files = res;

            files.forEach(file => {
                const div = document.createElement('div');
                div.classList.add('card','card-body','mb-3');
                div.innerText = file.filename;
                container.appendChild(div);
            });

        })).catch((err)=>{
            console.log(err);
        })
        
            
        });
    </script>
</body>
</html>